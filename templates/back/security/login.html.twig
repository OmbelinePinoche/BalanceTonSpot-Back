{% extends 'base.html.twig' %}

{% block main %}
	<div class="container mt-5">
		<div class="row justify-content-center">
			<div class="col-md-6 bg-light p-4 rounded shadow">
				<h2 class="mt-5 mb-4">Connexion</h2>

				<form
					method="post">
					{# If error when authenticating #}
					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}
					{# This checks if we are authenticated #}
					{% if app.user %}
						<div class="mb-3">
							Vous êtes connecté en tant que
							{{ app.user.userIdentifier }},
							<a href="{{ path('app_logout') }}">Déconnexion</a>
						</div>
					{% endif %}
					<div class="mb-3">
						<label for="username" class="form-label">Email:</label>
						<input type="text" id="username" name="email" class="form-control" placeholder="Ton email" value="" required autofocus>
					</div>

					<div class="mb-3">
						<label for="password" class="form-label">Mot de passe:</label>
						<input type="password" name="password" id="inputPassword" class="form-control" placeholder="Ton mot de passe" autocomplete="current-password" required>
					</div>

					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
					<button class="btn btn-danger me-2" type="submit">Lancer la ride!</button>
				</form>
			</br>
			<p>Pas encore de compte? Inscris-toi
				<a href="{{ path('app_register')}}">ici</a>.</p>

		</br>
	</div>
{% endblock %}
