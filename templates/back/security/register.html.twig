{% extends 'base.html.twig' %}

{% block main %}
	<div class="container mt-5">
		<div class="row justify-content-center">
			<div class="col-md-6 bg-light p-4 rounded shadow">
				<h2 class="mt-5 mb-4">Inscription</h2>

				{{ form_errors(registrationForm) }}

				{{ form_start(registrationForm) }}
				{{ form_row(registrationForm.firstname) }}
				{{ form_row(registrationForm.lastname) }}
				{{ form_row(registrationForm.pseudo) }}
				{{ form_row(registrationForm.profilPictureFile) }}
				{{ form_row(registrationForm.email) }}
				{{ form_row(registrationForm.password) }}
				{{ form_row(registrationForm.agreeTerms) }}

				<button type="submit" class="btn btn-primary">S'inscrire</button>

				<p>Déjà un compte? Connecte-toi
					<a href="{{ path('app_login') }}">ici</a>.</p>
			</div>
		</div>
	</div>
{% endblock %}
