{% extends 'base.html.twig' %}

{% block main %}
	<div class="container mt-5">
		<div class="row justify-content-center">
			<div class="col-md-6 bg-light p-4 rounded shadow">
				<h2 class="mt-5 mb-4">Inscription</h2>

				<form method="post">

					{{ form_start(registrationForm) }}
					<div class="form-group">
						{{ form_row(registrationForm.firstname) }}
					</div>
					<div class="form-group">
						{{ form_row(registrationForm.lastname) }}
					</div>
                    <div class="form-group">
					{{ form_row(registrationForm.pseudo) }}
                    </div>
                    <div class="form-group">
					{{ form_row(registrationForm.profilPictureFile) }}
                    </div>
                    <div class="form-group">
					{{ form_row(registrationForm.email) }}
                    </div>
                    <div class="form-group">
					{{ form_row(registrationForm.password) }}
                    </div>
					{{ form_row(registrationForm.agreeTerms) }}

					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
					<button class="btn btn-danger me-2" type="submit">Lancer la ride!</button>
				</form>
			</br>
			<p>Déjà un compte? Connecte-toi
				<a href="{{ path('app_login')}}">ici</a>.</p>
		</div>
	</div>
</div>{% endblock %}
