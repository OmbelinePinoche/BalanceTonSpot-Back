{% extends 'base.html.twig' %}

{% block main %}
	<div class="container mt-5">
		<div class="row justify-content-center">
			<div class="col-md-6 bg-light p-4 rounded shadow">
				<h1 class="text-muted fw-bold mb-4">Ajouter une image</h1>

				{{ form_start(form) }}
				<div class="form-group">
					{{ form_label(form.name) }}
					{{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
				</div>

				<div class="form-group">
					{{ form_label(form.path) }}
					{{ form_widget(form.path, {'attr': {'class': 'form-control-file'}}) }}
				</div>

				<div class="form-group">
					{{ form_label(form.spot) }}
					{{ form_widget(form.spot, {'attr': {'class': 'form-control'}}) }}
				</div>

				<div class="form-group">
					{{ form_widget(form.Ajouter, {'attr': {'class': 'btn btn-primary'}}) }}
				</div>
				{{ form_end(form) }}


				<a href="{{ path('list_pictures') }}">Retour Ã  la liste</a>
			</div>
		</div>
	</div>
{% endblock %}
