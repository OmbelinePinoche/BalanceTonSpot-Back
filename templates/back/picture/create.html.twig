{% extends 'base.html.twig' %}

{% block main %}
	<div class="container mt-5">
		<div class="row justify-content-center">
			<div class="col-md-6 bg-light p-4 rounded shadow">
				<h2 class="text-muted fw-bold mb-4">Ajouter une image</h2>

				{{ form_start(form, {'enctype': 'multipart/form-data'}) }}
				<div class="form-group">
					{{ form_label(form.name) }}
					{{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
				</div>

				<div class="form-group">
					{{ form_label(form.path) }}
					{{ form_widget(form.path, {'attr': {'class': 'form-control-file'}}) }}
				</div>

				<div class="form-group">
					{{ form_label(form.spot) }}
					{{ form_widget(form.spot, {'attr': {'class': 'form-control'}}) }}
				</div>
				{{ form_end(form) }}
				<div class="mt-3">
					<a href="{{ path('list_pictures') }}" class="btn btn-secondary" style="background-color: #897b68; border: #897b68;">Retour Ã  la liste</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
