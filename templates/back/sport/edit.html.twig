{% extends 'base.html.twig' %}

{% block main %}
	<div class="container mt-5">
		<div class="row justify-content-center">
			<div class="col-md-6 bg-light p-4 rounded shadow">
				<h2 class="text-muted fw-bold mb-4">Modifier le sport
					<i>{{ sport.name }}</i>
				</h2>

				{{ form_start(form) }}
				<div class="form-group">
					{{ form_label(form.name) }}
					{{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
				</div>
				{{ form_end(form) }}

				<div class="mt-3">
					<a href="{{ path('list_sport') }}" class="btn btn-secondary">Retour Ã  la liste</a>
					<a href="{{ path('remove_sport', {id:sport.id}) }}" class="btn btn-primary">Supprimer ce sport</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
