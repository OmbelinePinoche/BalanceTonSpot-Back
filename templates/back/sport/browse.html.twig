{% extends 'base.html.twig' %}

{% block main %}

	<div class="container-xl bg-light p-5 border-top">
		<div class="row mb-2">
			<div class="col-12 col-lg-3">
				<ul class="d-flex flex-column flex-wrap list-unstyled justify-content-center"></br>
			</br>
		</br>
		<a href="{{ path('sort_sport', {'sortBy': 'name'}) }}" class="btn btn-sm btn-outline-danger mx-1 mb-2">Trier par nom</a>
		<a href="{{ path('sort_sport', {'sortBy': 'spot'}) }}" class="btn btn-sm btn-outline-danger mx-1 mb-2">Trier par spot</a>
	</br>
</div>
<div class="col-12 col-lg-9">
	<h2 class="text-muted fw-bold mb-4">Les sports
		{% if is_granted('ROLE_ADMIN') %}
		<a href="{{path('add_sport')}}" class="btn btn-sm btn-outline-danger mx-1 mb-2">Ajouter un sport</a>
		{% endif %}
	</h2>

	<table class="table table-hover mt-4">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom</th>
			</tr>
		</thead>
		<tbody>
			{% for sport in sports %}
				<tr>
					<td>{{ sport.id }}</td>
					<td>{{ sport.name }}</td>
					{% if is_granted('ROLE_ADMIN') %}
						<td>
							<a href="{{ path('edit_sport', {slug : sport.slug})}}" class="btn btn-sm btn-outline-info">Modifier</a>
						</td>
						<td>
							<a href="{{ path('remove_sport', {id : sport.id})}}"  class="btn btn-sm btn-outline-info">Supprimer</a>
						</td>
					{% endif %}
				</tr>
			{% else %}
				<tr>
					<td colspan="10">Aucun sport trouv√©</td>
				</tr>
			{% endfor %}
		</tbody>
	</tbody>
</table>{% endblock %}
