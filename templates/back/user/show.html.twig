{% extends 'base.html.twig' %}

{% block main %}
	<div class="container mt-5">
		<div class="row justify-content-center">
			<h2 class="text-muted fw-bold mb-4">{{ user.pseudo }}</h2>

	<table class="table table-hover mt-4">
		<tbody>
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Rôle</th>
				<td>
					{% for role in user.roles %}
						{{ role }}
						{% if not loop.last %},
						{% endif %}
					{% endfor %}
				</td>
			</tr>
			<tr>
				<th>Mot de passe</th>
				<td>   <input type="password" value=" {{ user.password }}" disabled></td>
			</tr>


		</tbody>
	</table>
			<div class="buttons-container">
				<a href="{{ path('list_user') }}" class="btn btn-secondary">Retour à la liste</a>

				{% if is_granted('ROLE_ADMIN') %}
					<a href="{{ path('edit_user', {'pseudo': user.pseudo}) }}" class="btn btn-primary">Modifier</a>
				{% endif %}
			</div>
		</div>
	</div>

{% endblock %}
