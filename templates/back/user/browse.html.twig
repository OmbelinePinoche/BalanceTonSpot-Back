{# {% extends 'base.html.twig' %} #}
{% block main %}
<h1>Liste des utilisateurs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
               
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                     
                <td>{{ user.content }}</td>
                <td>{{ user.roles }}</td>
                <td>{{ user.password }}</td>

                <td><a href="{{ path('show_user', {id : user.id})}}">Liste des utilisateurs</a></td>
                <td><a href="{{ path('edit_user', {id : user.id})}}">Modifier</a></td>  

            </tr>

        {% else %}
            <tr>
                <td colspan="10">Aucun utilisateur trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('create_user')}}">Créer un nouveau utilisateur</a>
{% endblock %}