{# {% extends 'base.html.twig' %} #}
{% block main %}
<h1>Liste des sports</h1>

    <table class="table">
        <thead>
            <tr>
                <
                <th>Name</th>
                <th>Spot_id</th>
        
            </tr>
        </thead>
        <tbody>
        {% for sport in sports %}
            <tr>
                     
                <td>{{ sport.name }}</td>
                <td>{{ sport.spot_id }}</td>

                <td><a href="{{ path('show_sport', {id : sport.id})}}">Liste des sports</a></td>
                <td><a href="{{ path('edit_sport', {id : sport.id})}}">Modifier</a></td>  

            </tr>

        {% else %}
            <tr>
                <td colspan="10">Aucun sport trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('create_sport')}}">Créer un nouveau sport</a>
{% endblock %}