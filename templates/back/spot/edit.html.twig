{% extends 'base.html.twig' %}

{% block main %}
	<div class="container mt-5">
		<div class="col-mb-4 bg-light p-4 rounded shadow">
			<h2 class="text-muted fw-bold mb-4">Modifier le spot
				<i>{{ spot.name }}</i>
			</h2>

			{{ form_start(form) }}
			<div class="form-group">
				{{ form_label(form.name) }}
				{{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
			</div>

			<div class="form-group">
				{{ form_label(form.sport_id) }}
				{{ form_widget(form.sport_id, {'attr': {'class': 'form-control'}}) }}
			</div>

			<div class="form-group">
				{{ form_label(form.location) }}
				{{ form_widget(form.location, {'attr': {'class': 'form-control'}}) }}
			</div>

			<div class="form-group">
				{{ form_label(form.address) }}
				{{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
			</div>

			<div class="form-group">
				{{ form_label(form.description) }}
				{{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
			</div>

			<div class="form-group">
				{{ form_label(form.picture) }}
				{{ form_widget(form.picture, {'attr': {'class': 'form-control'}}) }}
			</div>
			{{ form_end(form) }}
			
			<div class="mt-3">
				<a href="{{ path('list') }}" class="btn btn-secondary">Retour Ã  la liste</a>
				<a href="{{ path('remove', {id: spot.id}) }}" class="btn btn-primary">Supprimer ce spot</a>
			</div>
		</div>
	</div>
</div>{% endblock %}
